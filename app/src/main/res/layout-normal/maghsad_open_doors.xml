<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_simple"
    android:padding="8dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="ساعت بازگشایی درب خودرو در مقصد"
        android:textSize="8sp"
        android:id="@+id/maghsad_open_title"
        />

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_below="@id/maghsad_open_title"
        android:layout_alignParentLeft="true"
        android:id="@+id/time"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="8sp"
                android:text="ساعت"
                android:background="@drawable/shape_simple"
                android:gravity="center"
                android:id="@+id/maghsad_open_min"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="8sp"
                android:text="دقیقه"
                android:padding="4dp"
                android:gravity="center"
                android:background="@drawable/shape_simple"
                android:id="@+id/maghsad_open_date_hour"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="8sp"
            tools:text="12:25"
            android:padding="4dp"
            android:gravity="center"
            android:background="@drawable/shape_simple"
            android:id="@+id/maghsad_open_time_data"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_below="@id/maghsad_open_title"
        android:layout_toEndOf="@id/time"
        android:layout_marginLeft="12dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="8sp"
            android:text="تاریخ"
            android:background="@drawable/shape_simple"
            android:gravity="center"
            android:id="@+id/maghsad_open_date"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="8sp"
            tools:text="1396/02/25"
            android:padding="4dp"
            android:gravity="center"
            android:background="@drawable/shape_simple"
            android:id="@+id/maghsad_open_date_data"
            />

    </LinearLayout>


</RelativeLayout>