<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="4dp"
    android:background="@drawable/shape_simple"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نام نقطه مبادله:"
        android:textSize="8sp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:id="@+id/point_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        tools:text="بابل"
        android:layout_toStartOf="@id/point_name"
        android:layout_marginRight="8dp"
        android:id="@+id/point_name_data"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تاریخ:"
        android:textSize="8sp"
        android:layout_marginRight="16dp"
        android:layout_toStartOf="@id/point_name_data"
        android:id="@+id/point_date"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        tools:text="1396/03/21"
        android:layout_toStartOf="@id/point_date"
        android:layout_marginRight="8dp"
        android:id="@+id/point_date_date"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مدت مبادله:"
        android:textSize="8sp"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@id/point_date_date"
        android:id="@+id/point_mobadele_time"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        tools:text="07:25"
        android:layout_toStartOf="@id/point_mobadele_time"
        android:layout_marginRight="8dp"
        android:id="@+id/point_mobadele_time_data"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/point_name"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/point_in_out_takhir_tajil"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:text="تعجیل در خروج"
                    android:padding="2dp"
                    android:background="@drawable/shape_simple"
                    android:id="@+id/point_tajil_out"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:background="@drawable/shape_simple"
                    tools:text="00:24"
                    android:id="@+id/point_tajil_out_data"
                    android:gravity="center"
                    android:padding="2dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:text="تاخیر در خروج"
                    android:padding="2dp"
                    android:background="@drawable/shape_simple"
                    android:id="@+id/point_takhir_out"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:background="@drawable/shape_simple"
                    tools:text="00:24"
                    android:id="@+id/point_takhir_out_data"
                    android:gravity="center"
                    android:padding="2dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:text="تعجیل در ورود"
                    android:padding="2dp"
                    android:background="@drawable/shape_simple"
                    android:id="@+id/point_tajil_in"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:background="@drawable/shape_simple"
                    tools:text="00:24"
                    android:id="@+id/point_tajil_in_data"
                    android:gravity="center"
                    android:padding="2dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:text="تاخیر در ورود"
                    android:padding="2dp"
                    android:background="@drawable/shape_simple"
                    android:id="@+id/point_takhir_in"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:background="@drawable/shape_simple"
                    tools:text="00:24"
                    android:id="@+id/point_takhir_in_data"
                    android:gravity="center"
                    android:padding="2dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/point_in_out_time"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:text="ساعت خروج"
                    android:padding="2dp"
                    android:background="@drawable/shape_simple"
                    android:id="@+id/point_out"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:background="@drawable/shape_simple"
                    tools:text="00:24"
                    android:id="@+id/point_out_data"
                    android:gravity="center"
                    android:padding="2dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="4sp"
                    android:text="ساعت مقررخروج"
                    android:padding="2dp"
                    android:background="@drawable/shape_simple"
                    android:id="@+id/point_mogharar_out"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:background="@drawable/shape_simple"
                    tools:text="00:24"
                    android:id="@+id/point_mogharar_out_data"
                    android:gravity="center"
                    android:padding="2dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:text="ساعت ورود"
                    android:padding="2dp"
                    android:background="@drawable/shape_simple"
                    android:id="@+id/point_in"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:background="@drawable/shape_simple"
                    tools:text="00:24"
                    android:id="@+id/point_in_data"
                    android:gravity="center"
                    android:padding="2dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:text="ساعت مقرر ورود"
                    android:padding="2dp"
                    android:background="@drawable/shape_simple"
                    android:id="@+id/point_mogharar_in"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:background="@drawable/shape_simple"
                    tools:text="00:24"
                    android:id="@+id/point_mogharar_in_data"
                    android:gravity="center"
                    android:padding="2dp"
                    />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>