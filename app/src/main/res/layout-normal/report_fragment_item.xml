<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/peacock_blue"
    app:cardCornerRadius="@dimen/margin_verySmall"
    app:cardElevation="@dimen/margin_normal"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/report_fragment_menu"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/report_fragment_img"
            android:visibility="visible"
            tools:src="@drawable/icons_8_gps_receiving"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/report_fragment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignRight="@id/report_fragment_img"
            tools:text="گزارش های رهسپاری"
            android:textSize="14sp"
            android:layout_marginRight="50dp"
            android:textColor="@android:color/white"
            android:gravity="center"

            />

    </RelativeLayout>

</android.support.v7.widget.CardView>