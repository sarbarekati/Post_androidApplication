<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="4dp"
    android:background="@drawable/shape_simple"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مسافت طی شده از مبدا تا مقصد:"
        android:textSize="8sp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:id="@+id/tey_masir_length"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        tools:text="358"
        android:layout_toStartOf="@id/tey_masir_length"
        android:layout_marginRight="8dp"
        android:id="@+id/tey_masir_length_data"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tey_masir_length"
        android:id="@+id/speed_container"
        android:layout_marginTop="8dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سرعت میانگین :"
            android:textSize="8sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:id="@+id/tey_masir_avg_speed"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            tools:text="20"
            android:layout_toStartOf="@id/tey_masir_avg_speed"
            android:layout_marginRight="8dp"
            android:id="@+id/tey_masir_avg_speed_date"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بیشینه سرعت :"
            android:textSize="8sp"
            android:layout_marginRight="8dp"
            android:layout_toStartOf="@id/tey_masir_avg_speed_date"
            android:id="@+id/tey_masir_max_speed"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            tools:text="105"
            android:layout_toStartOf="@id/tey_masir_max_speed"
            android:layout_marginRight="8dp"
            android:id="@+id/tey_masir_max_speed_data"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/speed_container"
        android:layout_marginTop="4dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/point_in_out_time"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="تعجیل"
                    android:padding="2dp"
                    android:background="@drawable/shape_simple"
                    android:id="@+id/tey_masir_tajil"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:background="@drawable/shape_simple"
                    tools:text="00:24"
                    android:id="@+id/tey_masir_tajil_data"
                    android:gravity="center"
                    android:padding="2dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="تاخیر"
                    android:padding="2dp"
                    android:background="@drawable/shape_simple"
                    android:id="@+id/tey_masir_takhir"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:background="@drawable/shape_simple"
                    tools:text="00:24"
                    android:id="@+id/tey_masir_takhir_data"
                    android:gravity="center"
                    android:padding="2dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="زمان طی مسیر"
                    android:padding="2dp"
                    android:background="@drawable/shape_simple"
                    android:id="@+id/tey_masir_time"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:background="@drawable/shape_simple"
                    tools:text="00:24"
                    android:id="@+id/tey_masir_time_data"
                    android:gravity="center"
                    android:padding="2dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="زمان مقرر طی مسیر"
                    android:padding="2dp"
                    android:background="@drawable/shape_simple"
                    android:id="@+id/tey_masir_mogharar"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:background="@drawable/shape_simple"
                    tools:text="00:24"
                    android:id="@+id/tey_masir_mogharar_data"
                    android:gravity="center"
                    android:padding="2dp"
                    />
            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>