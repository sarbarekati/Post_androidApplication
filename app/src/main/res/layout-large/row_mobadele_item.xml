                android:layout_height="@dimen/title_height"
                android:id="@+id/line_fab_container"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/margin_large"
                    android:paddingTop="@dimen/margin_normal"
                    android:paddingBottom="@dimen/margin_normal"
                    android:id="@+id/mobadele_title_container"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small"
                        >
                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:src="@drawable/chevron_down"
                            android:layout_below="@id/mobadele_title_container"
                            android:id="@+id/fab_open_list"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:text="ایرانشهر"
                            android:id="@+id/mobadele_name_data"
                            />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:text="نام نقطه مبادله:"
                            android:id="@+id/mobadele_name_title"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:text="1396/11/03"
                            android:gravity="right"
                            android:id="@+id/mobadele_date_data"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:text="تاریخ : "
                            android:id="@+id/mobadele_date_title"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            tools:text="00:59"
                            android:gravity="right"
                            android:id="@+id/mobadele_time_data"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4
"
                            android:text="مدت مبادله:"

                            android:paddingLeft="@dimen/mobadele_six"
                            android:id="@+id/mobadele_time_title"
                            />
                    </LinearLayout>




                </LinearLayout>


                <LinearLayout
                    android:id="@+id/line_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_marginRight="@dimen/margin_large"
                    android:layout_below="@id/mobadele_title_container"
                    android:background="@color/gray_300"
                    android:orientation="horizontal"/>



