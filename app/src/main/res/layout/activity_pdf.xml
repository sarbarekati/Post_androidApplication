<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.anad.mobile.post.Utils.PdfBuilder"

    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/main_root"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/report_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/rahsepari_report_form" />

        <RelativeLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/report_title"
            android:background="@drawable/shape_simple"
            android:padding="8dp">

            <TextView
                android:id="@+id/report_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:textSize="8sp"
                android:text="تاریخ :" />

            <TextView
                android:id="@+id/report_date_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textSize="8sp"
                android:layout_toStartOf="@id/report_date"
                android:text="1396/06/26" />

            <TextView
                android:id="@+id/report_pelak_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textSize="8sp"
                android:text="967الف 15 " />

            <TextView
                android:id="@+id/report_pelak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="8sp"
                android:layout_toEndOf="@id/report_pelak_data"
                android:text="پلاک خودرو :" />

            <TextView
                android:id="@+id/report_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/report_date"
                android:layout_marginRight="8dp"
                android:textSize="8sp"
                android:layout_marginTop="8dp"
                android:text="کد خودرو :" />

            <TextView
                android:id="@+id/report_number_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_date"
                android:layout_marginTop="8dp"
                android:textSize="8sp"
                android:layout_toStartOf="@id/report_number"
                android:text="1271" />

            <TextView
                android:id="@+id/report_driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/report_number"
                android:layout_marginRight="8dp"
                android:textSize="8sp"
                android:layout_marginTop="8dp"
                android:text="نام راننده :" />

            <TextView
                android:id="@+id/report_driver_name_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_number"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                android:textSize="8sp"
                android:layout_toStartOf="@id/report_driver_name"
                android:text="قیصران پور" />

            <TextView
                android:id="@+id/report_path_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_number"
                android:layout_marginLeft="16dp"
                android:textSize="8sp"
                android:text="چابهار- زاهدان" />

            <TextView
                android:id="@+id/report_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_number"
                android:layout_marginLeft="4dp"
                android:textSize="8sp"
                android:layout_toEndOf="@id/report_path_data"
                android:text="مسیر :" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mabda_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_simple"
            android:layout_below="@id/title_container"

            android:padding="8dp">

            <TextView
                android:id="@+id/mabda_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="مدت زمان بارگیری مرسولات در مبدا"
                android:textSize="8sp" />

            <LinearLayout
                android:id="@+id/time_container"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_below="@id/mabda_title"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hour"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_simple"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="ساعت"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/minute"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shape_simple"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="دقیقه"
                        android:textSize="8sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/report_mabda_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/shape_simple"
                    android:gravity="center"
                    android:padding="4dp"

                    android:textSize="8sp"
                    tools:text="07:36" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="48dp"
                android:layout_below="@id/mabda_title"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/time_container"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mabda_date_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:background="@drawable/shape_simple"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="تاریخ"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/report_mabda_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_simple"
                    android:gravity="center"
                    android:padding="2dp"
                    tools:text="1396/06/23"
                    android:textSize="8sp" />
            </LinearLayout>
        </RelativeLayout>

        <include
            android:id="@+id/include_mabda_in_out"
            layout="@layout/mabda_in_out_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mabda_container" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_pdf_mobadele_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/include_mabda_in_out"
            android:visibility="visible">

        </android.support.v7.widget.RecyclerView>

        <include
            android:id="@+id/include_maghsad_in_out"
            layout="@layout/maghsad_in_out_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rc_pdf_mobadele_point" />

        <include
            android:id="@+id/include_maghsad_open_doors"
            layout="@layout/maghsad_open_doors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/include_maghsad_in_out" />

        <include
            android:id="@+id/include_maghsad_marsolat"
            layout="@layout/maghsad_marsolat_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/include_maghsad_open_doors" />

        <include
            android:id="@+id/include_maghsad_tey_masir"
            layout="@layout/tey_masir_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/include_maghsad_marsolat"/>


    </RelativeLayout>
</ScrollView>
