<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/peacock_blue"
    app:cardCornerRadius="@dimen/margin_verySmall"
    app:cardElevation="@dimen/margin_normal"
    android:layout_margin="1dp"
    android:id="@+id/report_fragment_menu"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/report_fragment_img"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/report_fragment_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="گزارش های رهسپاری"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:gravity="center"

            />

    </LinearLayout>

</android.support.v7.widget.CardView>